.bg-light.py-5.my-2
  %h2.text-center.text-primary= t('.page_title')
.mb-4
  .row
    .col-12
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                        data: { turbo: false }, html: { method: :patch, class: 'general-form-md' }) do |f|
        .row.g-4.justify-content-md-center
          .col-8
            = f.label :phone_number, t('.enter_phone_number'), class: 'form-label phone-number-label'
            = f.input_field :phone_number, autocomplete: 'phone_number',
                            id: 'phone_number', class: 'form-control', placeholder: t('.enter_phone_number')
            = f.full_error :phone_number, class: 'text-danger'
          .col-8
            = f.label :name, t('.enter_name'), class: 'form-label name-label'
            = f.input_field :name, autocomplete: 'name', id: 'name',
                            class: 'form-control', placeholder: t('.enter_name')
            = f.full_error :name, class: 'text-danger'
          .col-8
            = f.label :current_password, t('.enter_old_password'),
                      class: 'form-label current-password-label'
            = f.input_field :current_password,  autocomplete: 'current_password', id: 'current_password',
                            class: 'form-control', placeholder: t('.password_required'), type: 'password'
            = f.full_error :current_password, class: 'text-danger'
          .col-8
            = f.label :password, t('.enter_new_password'),
                      class: 'form-label workplace-address-label'
            = f.input_field :password,  autocomplete: 'password', id: 'password',
                            class: 'form-control', placeholder: t('.password_required'), type: 'password'
            = f.full_error :password, class: 'text-danger'
          .col-8.text-center
            = f.submit t('.save'), class: 'btn btn-primary mb-35 save-btn'
